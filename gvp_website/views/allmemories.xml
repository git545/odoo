<odoo>
 <template id="all_memory">
    <t t-call="website.layout">
        <t t-set="title">Memories</t>
        <div class="oe_structure"/>
        <div class="oe_structure">
            <div class="container">
                              <table width="100%">
                                  <tr>
                                         <td>
                                          <html>
                                                 <head>
                                                     <style>
                                                        * {
                                                          box-sizing: border-box;
                                                        }

                                                        /* Create three equal columns that floats next to each other */
                                                        .column {
                                                          float: left;
                                                          width: 257px;
                                                          padding: 10px;
                                                        }

                                                        /* Clear floats after the columns */
                                                        .rowcc {
                                                          content: "";
                                                          display: table;
                                                          clear: both;
                                                          width:auto;
                                                        }
                                                        </style>
                                                 </head>
                                             </html>
                                             <br/>
                                             <h4 style="background-color:#2c7372;border:1px solid black;color:white;"><center><u> <label>View Album</label></u></center></h4>
                                             <hr/>
                                             <div class="rowcc">
                                             <t t-foreach="album_get" t-as="aget">
                                                <div class="column">
                                                            <table>
                                                                <tr>
                                                                    <td >
                                                                            <a t-att-href="'/viewalbum/%s/add'%aget.id">
                                                                            <img  t-attf-src="data:image/png;base64,{{aget.album_img}}"  style="border: 1px solid #b3b3bf;border-radius: 6px;width:220PX;height:218PX;margin-left:2px;padding: 12px 12px 12px 12px; "/><br/>

                                                                            <font color="black"><b><t t-esc="aget.album_name"/> </b></font>     <small><t t-esc="aget.album_month"/>-<t t-esc="aget.album_year"/></small><br/>
                                                                            <center> (<t t-esc="aget.cnt"/> Photos)</center>
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                </div>
                                                 </t>
                                            </div>
                                     </td>
                                 </tr>
                             </table>
            </div>
        </div>
        <div class="oe_structure"/>
    </t>
</template>
</odoo>