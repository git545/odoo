<odoo>
<!-- Register User Action   -->
 <record id="gvpwebsite_reguser_action" model="ir.actions.act_window">
        <field name="name">RegisterUser</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tbl_basicinfo</field>
        <field name="view_mode">kanban,tree,form,graph</field>

    </record>

      <record id="gvp_reguser_view_kanban" model="ir.ui.view">
        <field name="name">Registeruserlist.kanban</field>
        <field name="model">tbl_basicinfo</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="fname"/>
                <field name="lname"/>
                <field name="pemail"/>
                <field name="gender"/>
                <field name="profile_photo"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                     <field name="profile_photo" widget='image' style="width:150PX;height:185PX; border-radius: 6px; border: 1px solid gray;"/>
                                </div>
                                <div class="oe_kanban_details">
                                         <t class="o_kanban_record_title">
                                            <strong t-esc="record.fname.value"/>  <strong t-esc="record.lname.value"/>
                                              <br/><field name="gender"/>
                                              <br/><field name="dob"/>
                                              <br/><field name="pemail"/>
                                             <br/><field name="countryname"/>
                                         </t>
                                </div>
                            </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="academy_course_search" model="ir.ui.view">
        <field name="name">Registeruser: search</field>
        <field name="model">tbl_basicinfo</field>
        <field name="arch" type="xml">
            <search>
                <field name="fname"/>
                <field name="lname"/>
                <field name="countryname"/>
            </search>
        </field>
    </record>
    <record id="gvp_user_basic_info" model="ir.ui.view">
        <field name="name">Registeruser: form</field>
        <field name="model">tbl_basicinfo</field>
        <field name="arch" type="xml">
            <form string="Users" >
                <sheet>
                        <div name="button_box" class="oe_button_box">
                        </div>

                          <field name="profile_photo" widget='image' class="oe_avatar" style="width:150PX;height:85PX;"/>
                        <div class="oe_title">
                            <h1 class="d-flex">
                                <field name="fname"/><field name="lname" />
                            </h1>
                        </div>
                     <group>
                            <group>
                                <field name="dob"/>
                                <field name="gender"/>
                                <field name="mobile" widget="phone"/>
                                <field name="pemail" widget="email"/>
                            </group>
                            <group>
                                <field name="addr"/>
                                <field name="city"/>
                                 <field name="statename"/>  <field name="pincode"/>
                                 <field name="countryname"/>
                            </group>
                        </group>
                      <notebook>
                            <page name="public" string="Information">
                                <div id="o_work_employee_container">
                                    <div id="o_work_employee_main">
                                        <group>
                                            <field name="edu_id">
                                                <tree Sstring="Education Details" editable="bottom">
                                                    <field name="instname"/>
                                                     <field name="uniname"/>
                                                     <field name="course"/>
                                                       <field name="fmonth" class="oe_inline"/><field name="fyear" class="oe_inline" />
                                                </tree>
                                            </field>
                                        </group>
                                        <group>
                                             <field name="exp_id">
                                                <tree Sstring="Professional Experience" editable="bottom">
                                                    <field name="orgname"/>
                                                    <field name="desg"/>
                                                     <field name="loc"/>


                                                </tree>
                                            </field>
                                        </group>
                                        <group>
                                             <field name="work_id">
                                                <tree Sstring="Current Work Profile" editable="bottom">
                                                     <field name="farea"/>
                                                     <field name="skills"/>
                                                     <field name="rexp"/>
                                                     <field name="industry"/>
                                                </tree>
                                            </field>
                                        </group>
                                    </div>
                                </div>
                            </page>
                      </notebook>
                </sheet>
            </form>
        </field>
    </record>
<!-- GVP Register USER Action page-->
</odoo>